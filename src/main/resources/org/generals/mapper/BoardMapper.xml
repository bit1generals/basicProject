<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.generals.mapper.BoardMapper">
	<insert id="insert" >
		insert into tbl_board (btype, id, title, content)
		values(#{btype}, #{id}, #{title}, #{content})
	</insert>
	
	<select id="read" resultType="org.generals.domain.BoardVO">
		select * from tbl_board where bno = #{bno};
	</select>
	
	<update id="update">
		update tbl_board set title = #{title}, content = #{content}, updatedate = now() where bno = #{bno}
	</update>
	
	<delete id="delete">
		delete from tbl_board where bno = #{bno}
	</delete>
	
	<select id="getList" resultType="org.generals.domain.BoardVO">
		select * from tbl_board
	</select>
</mapper>